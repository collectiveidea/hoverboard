{
  "plugins": ["./server/lib/babelRelayPlugin"],
  "presets": ["react", "es2015", "stage-0"],
  "env": {
    "development": {
      "plugins": [
        ["react-transform", {
          "transforms": [{
            "transform": "react-transform-hmr",
            "imports": ["react"],
            "locals": ["module"]
          }, {
            "transform": "react-transform-catch-errors",
            "imports": ["react", "redbox-react"]
          }]
        }],
        ["module-resolver", {
          "root": ["./server"],
          "alias": {
            "test": "./server/test",
            "server": "./server",
            "types": "./server/types",
            "models": "./server/models",
            "underscore": "lodash"
          }
        }]
      ]
    },
    "test": {
      "plugins": ["transform-es2015-modules-commonjs"]
    }
  }
}
